{
    "compilerOptions": {
        "outDir":"js",
        "module": "es6",
        "target": "es6",
        "declaration":true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators":true,
        "moduleResolution": "node",
        "alwaysStrict":true,
        "lib": ["es6", "dom", "es2017"]
    },
      "exclude": [
        "node_modules"
      ],
      "include": [
        "src"
      ]
}
{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution":"node",
        "esModuleInterop":true,
        "resolveJsonModule":true,
        "lib": ["es6","dom","es2016","es2017"],
        "sourceMap":true,
        "allowJs":false,
        "declaration":true,
        "outDir":"lib",
        "rootDir":"src",
        "jsx":"react",
        "noImplicitAny": false,
        "alwaysStrict":true,
        "allowSyntheticDefaultImports": true,
    },
      "exclude": [
        "lib",
        "node_modules"
      ],
      "include": [
        "src"
      ]
}
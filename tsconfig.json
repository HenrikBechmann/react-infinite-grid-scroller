{
    "compilerOptions": {
        "outDir":"dist",
        "module": "commonjs",
        "target": "es5",
        "declaration":false,
        "jsx": "react",
        "allowSyntheticDefaultImports":true,
        "noImplicitAny": false,
        "esModuleInterop":true,
        "experimentalDecorators":true,
        "moduleResolution": "node",
        "alwaysStrict":true,
        "lib": ["es6", "dom", "es2017"]
    },
      "exclude": [
        "node_modules"
      ],
      "include": [
        "src"
      ]
}
{
    "compilerOptions": {
        "outDir":"lib",
        "module": "commonjs",
        "target": "es6",
        "lib": ["es5","es6","es7","es2017","dom"],
        "sourceMap":true,
        "allowJs":false,
        "jsx":"react",
        "moduleResolution":"node",
        "rootDir":"src",
        "baseUrl":"src",
        "declaration":true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "esModuleInterop":true,
        "alwaysStrict":true,
    },
      "exclude": [
        "lib",
        "node_modules"
      ],
      "include": [
        "src"
      ]
}